<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.FragmentProfile">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/scroll_view_rel"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/scroll_child_rel"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/blue">

                <TextView
                    android:id="@+id/tv_my_acc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="20dp"
                    android:fontFamily="@font/interbold"
                    android:text="My Account"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_my_acc"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/intermedium"
                    android:padding="5dp"
                    android:text="Aman Meraj"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_my_acc"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/intermedium"
                    android:padding="5dp"
                    android:text="Edit"
                    android:textColor="@color/orange"
                    android:textSize="14sp">

                </TextView>

                <RelativeLayout
                    android:id="@+id/number_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/phone_img"
                        android:layout_width="20dp"

                        android:layout_height="20dp"
                        android:padding="4dp"
                        android:src="@drawable/phone_reciver" />

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/phone_img"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/phone_img"
                        android:fontFamily="@font/intermedium"
                        android:text="+91-254862578"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/email_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/number_rel">

                    <ImageView
                        android:id="@+id/email_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="4dp"
                        android:src="@drawable/envolope" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/email_img"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/email_img"
                        android:fontFamily="@font/intermedium"
                        android:text="amanmeraj.12356@hotmail.com"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_below="@+id/scroll_child_rel"
                android:id="@+id/membership_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Membership"
                    android:textColor="@color/black"
                    android:fontFamily="@font/interbold"
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/member_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/member_tv"
                    android:background="@drawable/orange_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="1dp"
                        android:text="Active"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/intermedium"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/membership_text"
                    android:layout_below="@+id/member_tv"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/intermedium"
                    android:textSize="12sp"
                    android:text="simply dummy text of the printing and typesetting industry."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:padding="2dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/right_icon"
                    android:src="@drawable/right_chevron"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <View
                    android:layout_marginHorizontal="10dp"
                    android:background="@color/black"
                    android:layout_below="@+id/membership_text"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_below="@+id/membership_rel"
                android:id="@+id/address_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="My Address"
                    android:textColor="@color/black"
                    android:fontFamily="@font/interbold"
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/address_text"
                    android:layout_below="@+id/address_tv"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/intermedium"
                    android:textSize="12sp"
                    android:text="simply dummy text of the printing and typesetting industry."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:padding="2dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/address_icon"
                    android:src="@drawable/right_chevron"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <View
                    android:layout_marginHorizontal="10dp"
                    android:background="@color/black"
                    android:layout_below="@+id/address_text"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_below="@+id/address_rel"
                android:id="@+id/payments_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Payments &amp; Refund"
                    android:textColor="@color/black"
                    android:fontFamily="@font/interbold"
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/payments_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/payments_text"
                    android:layout_below="@+id/payments_tv"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/intermedium"
                    android:textSize="12sp"
                    android:text="simply dummy text of the printing and typesetting industry."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:padding="2dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/payments_icon"
                    android:src="@drawable/right_chevron"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <View
                    android:layout_marginHorizontal="10dp"
                    android:background="@color/black"
                    android:layout_below="@+id/payments_text"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_below="@+id/payments_rel"
                android:id="@+id/help_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Help"
                    android:textColor="@color/black"
                    android:fontFamily="@font/interbold"
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/help_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/help_text"
                    android:layout_below="@+id/help_tv"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/intermedium"
                    android:textSize="12sp"
                    android:text="simply dummy text of the printing and typesetting industry."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:padding="2dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/help_icon"
                    android:src="@drawable/right_chevron"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <View
                    android:layout_marginHorizontal="10dp"
                    android:background="@color/black"
                    android:layout_below="@+id/help_text"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_marginVertical="50dp"
                android:layout_below="@+id/help_rel"
                android:background="@drawable/inactive_btn"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/power_img"
                        android:padding="7dp"
                        android:src="@drawable/power"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                    <TextView
                        android:textSize="15sp"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="10dp"
                        android:layout_toEndOf="@+id/power_img"
                        android:text="Logout"
                        android:textColor="@color/black"
                        android:fontFamily="@font/interbold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>


            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>