<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="5dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/white_bg"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/img_bell"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/grey_bg"
        android:layout_width="40dp"
        android:layout_height="40dp">
        <ImageView

            android:layout_width="40dp"
            android:src="@drawable/bell"
            android:padding="10dp"
            android:layout_height="40dp"/>
    </RelativeLayout>
    <TextView
        android:textSize="15sp"
        android:fontFamily="@font/interbold"
        android:layout_alignTop="@+id/img_bell"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/img_bell"
        android:id="@+id/heading"
        android:text="AMC Providers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_marginEnd="20dp"
        android:layout_marginVertical="5dp"
        android:textSize="12sp"
        android:layout_below="@+id/heading"
        android:fontFamily="@font/intermedium"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/img_bell"
        android:id="@+id/sub_heading"
        android:text="simply dummy text of the printing and typesetting
industry. simply dummy text of the  typesetting industry."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="5dp"
        android:textSize="12sp"
        android:layout_below="@+id/sub_heading"
        android:fontFamily="@font/intermedium"
        android:textColor="@color/grey"
        android:layout_marginEnd="20dp"
        android:id="@+id/date"
        android:text="15/06/2001 10:30 am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>


</RelativeLayout>