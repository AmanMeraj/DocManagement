<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background=" #E9EEF1"
    android:layout_height="match_parent"
    tools:context=".Signin.ActivitySignin">
    <ImageView
        android:src="@drawable/newlogo"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="80dp">

    </ImageView>
    <TextView
        android:textAlignment="center"
        android:id="@+id/text_1"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/intermedium"
        android:text="From Warranty to Resolution,
We've Got You Covered."
        android:layout_below="@+id/logo"
       android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="wrap_content">

    </TextView>
    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_above="@+id/linear_button"
        android:layout_marginVertical="10dp"
        android:layout_alignStart="@+id/linear_button"
        android:orientation="horizontal"
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:layout_marginTop="12dp"
            android:background="@color/black"
            android:layout_width="90dp"
            android:layout_height="1dp">

        </View>
        <TextView
            android:fontFamily="@font/interbold"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="10dp"
            android:text="or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <View
            android:layout_marginTop="12dp"
            android:background="@color/black"
            android:layout_width="90dp"
            android:layout_height="1dp">

        </View>

    </LinearLayout>

    <LinearLayout
        android:weightSum="3"
        android:gravity="center"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/linear_button"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/facebook_btn"
            android:background="@drawable/button_bg"
            android:backgroundTint="#1878F3">
            <ImageView
                android:padding="5dp"
                android:src="@drawable/facebook_logo"
                android:id="@+id/image"
                android:background="@drawable/icon_bg"
                android:layout_width="40dp"
                android:layout_height="40dp">

            </ImageView>
            <TextView
                android:fontFamily="@font/interbold"
                android:textSize="15sp"
                android:layout_toEndOf="@+id/image"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/white"
                android:text="Login with facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/google_btn"
            android:background="@drawable/button_bg"
            android:backgroundTint="#D7D7D7">
            <ImageView
                android:padding="5dp"
                android:src="@drawable/google_logo"
                android:id="@+id/image_google"
                android:background="@drawable/icon_bg"
                android:layout_width="40dp"
                android:layout_height="40dp">

            </ImageView>
            <TextView
                android:fontFamily="@font/interbold"
                android:textSize="15sp"
                android:layout_toEndOf="@+id/image_google"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:text="Login with Google     "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/apple_btn"
            android:background="@drawable/button_bg"
            android:backgroundTint="@color/black">
            <ImageView
                android:padding="5dp"
                android:src="@drawable/apple_logo"
                android:id="@+id/image_apple"
                android:background="@drawable/icon_bg"
                android:layout_width="40dp"
                android:layout_height="40dp">

            </ImageView>
            <TextView
                android:fontFamily="@font/interbold"
                android:textSize="15sp"
                android:layout_toEndOf="@+id/image_apple"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/white"
                android:text="Login with Apple id  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/interbold"
        android:textSize="18sp"
        android:text="@string/login"
        android:layout_width="match_parent"
        android:id="@+id/login_btn"
        android:background="@drawable/button_bg"
        android:layout_marginHorizontal="20dp"
        android:layout_above="@+id/linear2"
        android:layout_height="45dp">

    </androidx.appcompat.widget.AppCompatButton>
    <EditText
        android:paddingVertical="3dp"
        android:inputType="text"
        android:paddingStart="20dp"
        android:id="@+id/edt_user_id"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/edt_bg"
        android:layout_above="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp">

    </EditText>
    <TextView
        android:textAlignment="center"
        android:id="@+id/tv_user_id"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/interbold"
        android:text="Enter number/Email"
      android:layout_above="@+id/edt_user_id"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="wrap_content">

    </TextView>


</RelativeLayout>