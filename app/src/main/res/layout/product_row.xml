<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="5dp"
    app:cardElevation="2dp"
    android:id="@+id/product_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:id="@+id/img_card"
            android:layout_width="wrap_content"
            android:layout_height="90dp">
            <ImageView
                android:id="@+id/image"
                android:scaleType="centerCrop"
                android:src="@drawable/banner19"
                android:layout_width="180dp"
                android:layout_height="match_parent">

            </ImageView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginStart="5dp"
            android:id="@+id/heading"
            android:textSize="15sp"
            android:fontFamily="@font/interbold"
            android:textColor="@color/black"
            android:text="Master Refrigerator"
            android:layout_marginVertical="10dp"
            android:layout_below="@+id/img_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_marginStart="5dp"
            android:id="@+id/warranty_txt"
            android:layout_marginBottom="10dp"
            android:paddingVertical="2dp"
            android:paddingHorizontal="5dp"
            android:background="@drawable/blue_bg"
            android:layout_below="@+id/heading"
            android:textColor="@color/white"
            android:fontFamily="@font/intermedium"
            android:textSize="8sp"
            android:text="UNDER WARRANTY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/warranty_txt"
            android:id="@+id/days_txt"
            android:layout_marginBottom="10dp"
            android:paddingVertical="2dp"
            android:paddingHorizontal="8dp"
            android:background="@drawable/orange_bg"
            android:layout_below="@+id/heading"
            android:textColor="@color/white"
            android:fontFamily="@font/intermedium"
            android:textSize="8sp"
            android:text="300 DAYS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </RelativeLayout>



</androidx.cardview.widget.CardView>

