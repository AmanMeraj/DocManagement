<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white_bg"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    tools:context=".AmcProvider.ActivityAmcProvider">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back_btn"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            android:padding="6dp"
            android:src="@drawable/back_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Enquiry Form"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/interbold"
            android:layout_alignTop="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/white_bg"
        android:layout_below="@+id/toolbar"
        android:id="@+id/name_rel"
        android:elevation="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/name_feild"
            style="@style/Widget.Material3.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeColor="@color/white"
            android:hint="Name">

            <com.google.android.material.textfield.TextInputEditText
                android:fontFamily="@font/intermedium"
                android:textSize="15sp"
                android:inputType="text"
                android:id="@+id/name_edt"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:textColorHint="@color/black"
                android:background="@color/white"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/white_bg"
        android:layout_below="@+id/name_rel"
        android:id="@+id/email_rel"
        android:elevation="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/email_feild"
            style="@style/Widget.Material3.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeColor="@color/white"
            android:hint="Mail Id">

            <com.google.android.material.textfield.TextInputEditText
                android:fontFamily="@font/intermedium"
                android:textSize="15sp"
                android:maxLines="1"
                android:id="@+id/email_edt"
                android:layout_width="match_parent"
                android:textColorHint="@color/black"
                android:background="@color/white"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/white_bg"
        android:layout_below="@+id/email_rel"
        android:id="@+id/phone_rel"
        android:elevation="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/phone_feild"
            style="@style/Widget.Material3.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeColor="@color/white"
            android:hint="Phone Number">

            <com.google.android.material.textfield.TextInputEditText
                android:fontFamily="@font/intermedium"
                android:textSize="15sp"
                android:id="@+id/phone_edt"
                android:inputType="number"
                android:maxLength="10"
                android:layout_width="match_parent"
                android:textColorHint="@color/black"
                android:background="@color/white"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>
    <RelativeLayout
        android:minHeight="180dp"
        android:background="@drawable/white_bg"
        android:layout_below="@+id/phone_rel"
        android:id="@+id/message_rel"
        android:elevation="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:layout_margin="3dp"
            android:id="@+id/message_feild"
            style="@style/Widget.Material3.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="180dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeColor="@color/white"
            android:hint=" Your Message">

            <com.google.android.material.textfield.TextInputEditText
                android:fontFamily="@font/intermedium"
                android:textSize="15sp"
                android:id="@+id/message_edt"
                android:maxLines="15"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:textColorHint="@color/black"
                android:background="@color/white"
                android:minHeight="180dp"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>



    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="40dp"
        android:text="Submit Enquiry"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/message_rel"
        android:layout_width="match_parent"
        android:background="@drawable/orange_curve"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.AppCompatButton>


</RelativeLayout>